<% content_for :javascripts do %>
  <%= javascript_include_tag 'plugins/pagination/dirPagination.js' %>
  <%= javascript_include_tag 'plugins/autocrud/utils.js' %>
  <%= javascript_include_tag 'plugins/autocrud/auto-crud.js' %>
  <%= javascript_include_tag 'plugins/autocrud/formcontroller.js' %>
  <%= javascript_include_tag 'plugins/autocrud/inputshandler.js' %>
  <%= javascript_include_tag 'plugins/autocrud/directives.js' %>

  <%= javascript_include_tag 'plugins/bootstrap-dialog/bootstrap-dialog.min.js' %>
  <%= javascript_include_tag 'plugins/autocrud/fileupload.js' %>
