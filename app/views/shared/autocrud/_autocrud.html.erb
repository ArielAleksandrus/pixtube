<% end %>
<div ng-controller="CrudableController as crudCtrl">
	<crudable attrs="crudCtrl.attrs" data="crudCtrl.dados" paginate-options="crudCtrl.paginateOptions"
	 object-properties="crudCtrl.objectProperties" plugin-path="/assets/plugins/autocrud">
	</crudable>
</div>